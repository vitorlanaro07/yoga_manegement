<%- include ('header.ejs')-%>
    
    <div class="container-nav">
        <div class="nav-logo">
            <a href="/" class="link-logo" >
                <img src="/images/logo.png" width="100px" height="100px" class="logo" alt="logo of a yoga practioner">
            </a>
        </div>
        <div class="nav-filter">
            <span class="material-symbols-outlined">
                search
            </span> 
        </div>
    </div>
    <div class="side-bar">
        <a href="" class="side-item">Students</a>
        <a href="" class="side-item">Notifications</a>
        <a href="" class="side-item">Payments</a>
    </div>
    <div class="principal-content">
        <div class="table-students">
            <div class="table-head">
                <h2 class="title">Students</h1>
            </div>
            <div class="table">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Student</th>
                            <th>Genre</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach((student) =>{ %>
                            <tr>
                                <td><%= student.id %></td>
                                <td><%= student.name %></td>
                                <td><%= student.genre %></td>
                                
                                <!-- Checking student status -->
                                <% if (student.status === 'active') {%>
                                    <td><span class="student-active"><%= student.status %></span></td>
                                <% } else if (student.status === 'inactive') {%>
                                    <td><span class="student-inactive"><%= student.status %></span></td>
                                <% } else if (student.status === 'interested') {%>
                                    <td><span class="student-interested"><%= student.status %></span></td>
                                <% }; %>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
<%- include ('footer.ejs')-%>